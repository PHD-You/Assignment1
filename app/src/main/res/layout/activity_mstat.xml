<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kynan.assignment_1.SStatActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2 Player"
        android:id="@+id/MTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="50dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="2 P"
        android:id="@+id/p2"
        android:textSize="25dp"
        android:onClick="p2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="4 P"
        android:id="@+id/p4"
        android:textSize="25dp"
        android:onClick="p4"
        android:layout_below="@+id/multiResult"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="3 P"
        android:id="@+id/p3"
        android:textSize="25dp"
        android:onClick="p3"
        android:layout_above="@+id/p2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/multiResult"
        android:layout_below="@+id/MTitle"
        android:layout_alignEnd="@+id/MTitle"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:layout_above="@+id/p3" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="DEL"
        android:id="@+id/clear"
        android:textSize="25dp"
        android:onClick="clear"
        android:layout_below="@+id/p3"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
